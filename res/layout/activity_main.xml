<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText android:id="@+id/ssid"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:hint="@string/ssid" />
<!--	    android:layout_weight="1" /> -->
    
    <EditText android:id="@+id/pre_shared_key"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:hint="@string/pre_shared_key" />
<!-- 	    android:layout_weight="1" /> -->

	<Button
	    android:id="@+id/write_tag_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/button_write_tag"
	    android:onClick="writeButtonClicked" />
    
    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_medium"
        android:text="@string/result_received"
        tools:context=".MainActivity" />
    
</LinearLayout>
